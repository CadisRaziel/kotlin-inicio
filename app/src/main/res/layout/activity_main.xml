<?xml version="1.0" encoding="utf-8"?>

<!-- LinearLayoutCompat: Melhor para alinhamento da tela pois o gravity acompanha ele  -->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- match_parent: Pega toda largura da tela que puder  -->
    <!-- sp/dp: Usado para fonte responsiva  -->
    <!-- gravity: Usado para manter centralizado  -->
    <!-- inputType: Usado para definir o tipo de teclado (numberDecimal para usar casa decimal com . ponto)  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Calculadora IMC"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Altura em Metros"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Peso em KG"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textResult"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
</androidx.appcompat.widget.LinearLayoutCompat>